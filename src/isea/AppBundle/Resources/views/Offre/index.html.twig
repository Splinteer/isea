{% extends "iseaAppBundle::Layout/backoffice_layout.html.twig" %}

{% block body -%}
    <div class="container-fluid">
    <h1>Liste d'offre</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libellé</th>
                <th>Résume</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('backoffice_offre_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.libelle }}</td>
                <td>{{ entity.resume }}</td>
                <td>
                <ul>
                    <li>
                        <a class="button button-red" href="{{ path('backoffice_offre_show', { 'id': entity.id }) }}">Afficher</a>
                        <a class="button button-red" href="{{ path('backoffice_offre_edit', { 'id': entity.id }) }}">Editer</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
            <li>
                <a class="button button-red" href="{{ path('backoffice_offre_new') }}">
                    Nouvelle offre
                </a>
            </li>
        </ul>
    </div>
    {% endblock %}
