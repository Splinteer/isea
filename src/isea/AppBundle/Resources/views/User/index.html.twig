{% extends "iseaAppBundle::Layout/backoffice_layout.html.twig" %}

{% block body -%}
    <div class="container-fluid">
    <h1>Utilisateurs</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Mail</th>
                <th>Admin</th>
                <th>Fonction</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.mail }}</td>
                <td>{{ entity.admin == 1? 'Oui' : 'Non' }}</td>
                <td>{{ entity.fonction }}</td>
                <td>
                <ul>
                    <li>
                        <a class="button button-red" href="{{ path('user_show', { 'id': entity.id }) }}">Afficher</a>
                        <a class="button button-red" href="{{ path('user_edit', { 'id': entity.id }) }}">Editer</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class="button button-red" href="{{ path('user_new') }}">
                Cr√©er un nouvel utilisateur
            </a>
        </li>
    </ul>
</div>
    {% endblock %}
