{% extends "iseaAppBundle::Layout/backoffice_layout.html.twig" %}

{% block body -%}
    <div class="container-fluid">
    <h1>Demande</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ entity.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ entity.message }}</td>
            </tr>
            <tr>
                <th>CV</th>
                <td><a href="{{ entity.getWebPathCV }}" style="float: right;" target="_blank" class="button button-xs button-dl" download></a></td>
            </tr>
            <tr>
                <th>Lettre de motivation</th>
                <td><a href="{{ entity.getWebPathLM }}" style="float: right;" target="_blank" class="button button-xs button-dl" download></a></td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a class="button button-red" href="{{ path('backoffice_demande') }}">
            Retour Ã  la liste
        </a>
        <a class="button button-red" href="{{ path('backoffice_demande_edit', { 'id': entity.id }) }}">
            Editer
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
</div>
{% endblock %}
