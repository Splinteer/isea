{% extends "iseaAppBundle::Layout/light_layout.html.twig" %}
{% block body %}
<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12 col-md-4 col-md-offset-4">
			<h1 id='scrollTo' class="scrollTo"><span class="cadre">Espace Recrutement</span></h1>
		</div>
		<div class="col-xs-8 col-xs-offset-2">
			<h2>Postuler</h2>
		</div>
		<div class="col-xs-2 col-xs-offset-5">
			<hr>
		</div>
	</div>
</div>
<!-- Offres -->
<div class="container-fluid">
	<div class="row">
		<div class="cadre col-xs-12 col-md-4 col-md-offset-4">
			<div class="row">
				<h3>{{ offre.getLibelle }}</h3>
				<p>{{ offre.getResume }}</p>
			</div>
			<div class="row">
				{{ form_start(form, {'attr': {'class': 'backofficeForm'}, 'multipart' : true}) }}
					{{ form(form) }}
				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>
{% endblock %}